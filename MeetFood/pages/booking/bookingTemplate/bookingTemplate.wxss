.row {
  display: flex;
  flex-direction: row;
}
.column {
  display: flex;
  flex-direction: column;
}
.hr {
  width: 100%;
  height: 1rpx;
  border-top: 1rpx solid #c3c3c3;
  position: fixed;
  z-index: 1;
}
.booking-item {
  display: flex;
  flex-direction: column;
  margin: 20rpx 30rpx 65rpx 30rpx;
  border-radius: 16rpx;
  background: #fdfdfd;
  box-shadow: 0 4rpx 36rpx #ECECEC;
}
.booking-item .takeNumber {
  font-size: 76rpx;
  font-weight: 600;
  text-align: center;
  color: #101010;
}
.booking-item .shop-info {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  border-bottom: 1rpx solid #c3c3c3;
}
.booking-item .shop-info .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 0 10rpx 0;
}
.booking-item .shop-info .top .shop-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}
.booking-item .shop-info .top .top-info {
  width: 80%;
  margin-left: 20rpx;
}
.booking-item .shop-info .top .top-info .shop-title {
  font-size: 34rpx;
  font-weight: 1000;
  color: #101010;
}
.booking-item .shop-info .top .top-info .booking-state {
  float: right;
  font-size: 30rpx;
  color: #333333;
}
.booking-item .shop-info .bottom {
  margin-bottom: 15rpx;
}
.booking-item .shop-info .bottom .shop-address {
  font-size: 26rpx;
  color: #666666;
  margin-left: 5rpx;
}
.booking-item .booking-info {
  display: flex;
  flex-direction: column;
  margin: 0 0 24px 50rpx;
  font-size: 26rpx;
  color: #999999;
}
.booking-item .warmReminder {
  text-align: center;
  margin: 0 20rpx 15rpx 20rpx;
  font-size: 26rpx;
}
.booking-item .takeBtn {
  width: 100%;
  border-top: 1rpx solid #f1f1f1;
  padding: 18rpx 0 22rpx 0;
  font-size: 30rpx;
}
.booking-item .takeBtn-1 {
  width: 100%;
  border-top: 1rpx solid #f1f1f1;
  padding: 18rpx 0 22rpx 0;
  font-size: 30rpx;
}
.booking-item .takeBtn-1 .btn {
  text-align: center;
  color: #173A57;
}
.booking-item .takeBtn-2 {
  width: 100%;
  border-top: 1rpx solid #f1f1f1;
  padding: 18rpx 0 22rpx 0;
  font-size: 30rpx;
  display: flex;
}
.booking-item .takeBtn-2 .btn1,
.booking-item .takeBtn-2 .btn2 {
  width: 48%;
  text-align: center;
}
.booking-item .takeBtn-2 .hr-y {
  width: 1rpx;
  height: 50rpx;
  background: #f1f1f1;
}
.booking-item .takeBtn-2 .btn1 {
  color: #173A57;
}
.booking-item .takeBtn-2 .btn2 {
  color: #FF5754;
}
